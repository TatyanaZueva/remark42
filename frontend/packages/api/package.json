{
  "name": "@remark42/api",
  "version": "0.6.0-alpha.11",
  "description": "Remark42 API Client",
  "keywords": [
    "remark42",
    "comments"
  ],
  "repository": "https://github.com/umputun/remark42/frontend/packages/api",
  "bugs": "https://github.com/umputun/remark42/issues",
  "homepage": "https://github.com/umputun/remark42/tree/master/frontend/packages/api#readme",
  "author": "Paul Mineev",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./admin": {
      "import": "./dist/admin/index.js",
      "require": "./dist/admin/index.js",
      "types": "./dist/admin/index.d.ts"
    },
    "./auth": {
      "import": "./dist/auth/index.js",
      "require": "./dist/auth/index.js",
      "types": "./dist/auth/index.d.ts"
    },
    "./public": {
      "import": "./dist/public/index.js",
      "require": "./dist/public/index.js",
      "types": "./dist/public/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsc -b -w --incremental",
    "build:cjs": "tsc --module CommonJS --outDir dist/cjs --declaration false",
    "build:esm": "tsc --module ESNext --outDir dist/esm --declarationDir dist/types",
    "build": "npm-run-all cleanup --parallel build:*",
    "postpublish": "pnpm run cleanup",
    "cleanup": "rm -rf dist",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .cjs,.mjs,.ts --max-warnings=0",
    "lint:fix": "pnpm lint --fix",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^2.0.2",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitest/coverage-c8": "^0.33.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
